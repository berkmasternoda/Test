<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My First Mini App</title>
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
    <style>
        body {
            /* Используем переменные темы Telegram для адаптации под ночной/дневной режим */
            background-color: var(--tg-theme-bg-color);
            color: var(--tg-theme-text-color);
            font-family: sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }
        button {
            padding: 10px 20px;
            background-color: var(--tg-theme-button-color);
            color: var(--tg-theme-button-text-color);
            border: none;
            border-radius: 8px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Привет, <span id="user-name">Пользователь</span>!</h1>
    <button id="main-btn">Нажми на меня</button>

    <script>
        // Инициализация приложения
        const tg = window.Telegram.WebApp;
        tg.ready(); // Сообщаем Telegram, что приложение готово к работе
        tg.expand(); // Разворачиваем приложение на всё окно

        // Получаем имя пользователя из данных Telegram
        const user = tg.initDataUnsafe?.user;
        if (user) {
            document.getElementById('user-name').innerText = user.first_name;
        }

        // Работа с кнопкой
        const btn = document.getElementById('main-btn');
        btn.addEventListener('click', () => {
            tg.showAlert("Вы нажали на кнопку внутри Mini App!");
        });

        // Покрасим главную кнопку Telegram (которая внизу экрана)
        tg.MainButton.setText("Закрыть приложение");
        tg.MainButton.show();
        tg.MainButton.onClick(() => {
            tg.close();
        });
    </script>
</body>
</html>
